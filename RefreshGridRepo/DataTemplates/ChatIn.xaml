<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RefreshGridRepo.DataTemplates.ChatIn">

    <Grid HorizontalOptions="Fill" VerticalOptions="StartAndExpand">
        <Border Padding="10"
                BackgroundColor="{StaticResource Gray100}" 
                Margin="50,0,0,10" StrokeShape="RoundRectangle 10,10,10,0" 
                HorizontalOptions="EndAndExpand" VerticalOptions="StartAndExpand">
            <VerticalStackLayout HorizontalOptions="Fill" VerticalOptions="StartAndExpand">
                <Label Text="{Binding Content}" TextColor="{StaticResource Black}" HorizontalOptions="StartAndExpand"></Label>
                <Label Text="{Binding UpdatedAt.LocalDateTime, StringFormat='{0:t}'}" FontSize="10" HorizontalOptions="End" TextColor="{StaticResource Gray400}"></Label>
            </VerticalStackLayout>
        </Border>
    </Grid>
    
</ContentView>
