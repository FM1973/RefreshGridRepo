<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RefreshGridRepo.DataTemplates.MessageOut">

    <Grid HorizontalOptions="Fill" VerticalOptions="StartAndExpand">
        <Border Padding="10" Rotation="180"
                BackgroundColor="{StaticResource Blue200Accent}" StrokeThickness="0"
                Margin="0,0,50,10" StrokeShape="RoundRectangle 10,10,10,0"
                HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand">
            <VerticalStackLayout HorizontalOptions="Fill" VerticalOptions="StartAndExpand">
                <Label Text="{Binding Content}" TextColor="{StaticResource White}" HorizontalOptions="EndAndExpand"></Label>
                <Label Text="{Binding UpdatedAt.LocalDateTime, StringFormat='{0:t}'}" FontSize="10" HorizontalOptions="End" TextColor="{StaticResource Gray400}"></Label>
            </VerticalStackLayout>
        </Border>
    </Grid>

</ContentView>
